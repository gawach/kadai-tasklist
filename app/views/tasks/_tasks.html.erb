<ul class="list-unstyled">
  <% tasks.each do |task| %>
    <li class="media mb-3">
      <img class="mr-2 rounded" src="<%= gravatar_url(task.user, { size: 50 }) %>" alt="">
      <div class="media-body">
        <div>
          <%= link_to task.user.name, user_path(task.user) %> <span class="text-muted">posted at <%= task.created_at %></span>
        </div>
        <div>
          <ul class="list-unstyled">
            <li>
              内容：<%= link_to task.content, task_path(task) %>
            </li>
            <li>
              進捗度：<%= task.status %>
            </li>
          </ul>
        </div>
        <div>
          <% if current_user == task.user %>
            <%= link_to "Edit", edit_task_path(task), class: 'btn btn-secondary btn-sm' %>
            <%= link_to "Delete", task, method: :delete, data: { confirm: "You sure?" }, class: 'btn btn-danger btn-sm' %>
          <% end %>
        </div>
      </div>
    </li>
  <% end %>
  <%= paginate tasks %>
</ul>