<div>
  <h1><%= link_to @task.user.name, user_path(@task.user) %> のタスク詳細ページ</h1>
</div>
<div class="row">
  <li class="media mb-3">
    <img class="mr-2 rounded" src="<%= gravatar_url(@task.user, { size: 50 }) %>" alt="">
    <div class="media-body">
      <div>
        <%= link_to @task.user.name, user_path(@task.user) %> <span class="text-muted">posted at <%= @task.created_at %></span>
      </div>
      <div>
        <p class="btn btn-primary"><%= link_to @task.content, task_path(@task), class: 'btn-primary' %>：<%= @task.status %></p>
      </div>
      <div>
        <% if current_user == @task.user %>
          <%= link_to "Edit", edit_task_path(@task), class: 'btn btn-secondary btn-sm' %>
          <%= link_to "Delete", class:'btn btn-danger', method: :delete, data: { confirm: "You sure?" } %>
        <% end %>
      </div>
    </div>
  </li>
</div>